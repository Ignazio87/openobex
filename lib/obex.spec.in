# Note that this is NOT a relocatable package
%define ver      @OBEX_VERSION@
%define  RELEASE 1
%define  rel     %{?CUSTOM_RELEASE} %{!?CUSTOM_RELEASE:%RELEASE}
%define prefix   /usr

Summary: Library for using OBEX
Name: obex
Version: %ver
Release: %rel
Copyright: LGPL
Group: Libraries
Source: ftp://ftp.ravioli.pasta.cs.uit.no/pub/Ravioli/obex/obex-%{ver}.tar.gz
BuildRoot: /var/tmp/%{name}-%{PACKAGE_VERSION}-root
URL: http://www.ravioli.pasta.cs.uit.no/open-obex/
Docdir: %{prefix}/doc
Requires: glib >= 1.2.0
%description
OBEX shared library

%changelog

* Thu May 18 2000 Pontus Fuchs <pontus@tactel.se>
- Initial RPM

%prep
rm -rf $RPM_BUILD_ROOT

%setup -q

%build
cd lib
CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}
make

%install
rm -rf $RPM_BUILD_ROOT
cd lib
make prefix=$RPM_BUILD_ROOT%{prefix} install

%clean
rm -rf $RPM_BUILD_ROOT

%post -p /sbin/ldconfig

%postun -p /sbin/ldconfig

%files
%defattr(-, root, root)

%{prefix}/lib/libobex*
%{prefix}/include/obex/
%{prefix}/bin/obex-config

%doc lib/AUTHORS lib/COPYING lib/ChangeLog lib/NEWS lib/README
