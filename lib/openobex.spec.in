# Note that this is NOT a relocatable package
%define ver      @OBEX_VERSION@
%define  RELEASE 1
%define  rel     %{?CUSTOM_RELEASE} %{!?CUSTOM_RELEASE:%RELEASE}
%define prefix   /usr

Summary: Library for using OBEX
Name: openobex
Version: %ver
Release: %rel
Copyright: LGPL
Group: Libraries
Source: ftp://download.sourceforge.net/pub/sourceforge/openobex/openobex-%{ver}.tar.gz
BuildRoot: /var/tmp/%{name}-%{PACKAGE_VERSION}-root
URL: http://openobex.sourceforge.net
Docdir: %{prefix}/doc
Requires: glib >= 1.2.0
%description
Open OBEX shared c-library

%changelog

* Thu May 18 2000 Pontus Fuchs <pontus.fuchs@tactel.se>
- Initial RPM

%prep
rm -rf $RPM_BUILD_ROOT

%setup -q

%build
CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}
make

%install
rm -rf $RPM_BUILD_ROOT
make prefix=$RPM_BUILD_ROOT%{prefix} install

%clean
rm -rf $RPM_BUILD_ROOT

%post -p /sbin/ldconfig

%postun -p /sbin/ldconfig

%files
%defattr(-, root, root)

%{prefix}/lib/libopenobex*
%{prefix}/include/openobex/
%{prefix}/bin/openobex-config
%{prefix}/share/aclocal/openobex.m4

%doc AUTHORS COPYING ChangeLog NEWS README
